@model AuthenticationController.LoginModel
@{
    ViewBag.Title = "Sign In";
}
<article>

    <h1>Sign In</h1>

     @using (Html.BeginForm("OpenId", "Authentication", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "openid" })) {
        
         @Html.AntiForgeryToken()

        <div>
            <ul class="providers"> 
              
               <li hidden class="openid" title="OpenID"><img src="@Url.Content("~/scripts/jQueryOpenIdPlugin/images/openidB.png")" alt="icon" /> 
                    <span><strong>http://{your-openid-url}</strong></span>
                </li>
                <li class="direct" title="Google"> 
                    <img src="@Url.Content("~/scripts/jQueryOpenIdPlugin/images/googleB.png")" alt="icon" /><span>https://accounts.google.com/o/oauth2/auth</span>
                </li> 
                <li hidden class="direct" title="Yahoo"> 
                    <img src="@Url.Content("~/scripts/jQueryOpenIdPlugin/images/yahooB.png")" alt="icon" /><span>http://yahoo.com/</span>
                </li> 
               <li hidden class="username" title="MyOpenID user name"> 
                    <img src="@Url.Content("~/scripts/jQueryOpenIdPlugin/images/myopenidB.png")" alt="icon" /><span>http://<strong>username</strong>.myopenid.com/</span>
                </li>
            </ul>
        </div> 
    
        <fieldset hidden> 
            <!--<label for="openid_identifier">Enter your <a class="openid_logo" href="http://openid.net">OpenID</a></label> -->
            <div hidden>
                <input hidden type="text" name="openid_identifier" /> 
                <input hidden type="submit" value="Sign In" />
            </div> 
        </fieldset>

     }

    <div class="message">
        @Model.Message
    </div>

</article>

@section Scripts {
<script>
    $(function () { $("form.openid:eq(0)").openid(); });
</script>
}
